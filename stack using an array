#include <iostream>
using namespace std;
int main() {
    int n, x=0;
    cout<<"Enter number of elements: ";
    cin>>n;
    int a[n]; 
    for (int i=0;i<n;i++) {
        cout<<"enter "<<i<<"element";
        cin>>a[i];
    }
    int m=a[0];
    for (int i=0;i<n;i++) {
        if (a[i]<m) {
            m=a[i];
            x=i;
        }
    }
    cout << "smallest number is: " << m<< endl;
    cout<< "index value is ; "<<x<< endl;
}
